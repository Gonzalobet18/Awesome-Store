!!! 5
%html
%head
	%title Rails Store
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	= render 'nav'
	.container
		= content_tag :div, notice, class: "bg_success"
		= content_tag :div, alert, class: "bg_danger"
		= yield